<form method="post" action="/AddNewBook" class="add-book">
    <p>Add a new book</p>
    <div>
        <label>Name:</label>
        <input name="bookName" type="text" required />
    </div>
    <div class="form-group">
        <label>Author Name:</label>
        <input name="authorName" type="text" required />
    </div>
    <div class="form-group">
        <label>Amazon Link:</label>
        <input name="amazonLink" type="text" required />
    </div>
    <button type="submit">Submit</button>
</form>